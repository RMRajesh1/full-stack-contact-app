<?xml version="1.0" encoding="ISO-8859-1"?>
<web-app xmlns="http://java.sun.com/xml/ns/j2ee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd"
    version="2.4">

    <display-name>Contact application</display-name>
    <description>
        This was build using EmberJS as front-end and Scala as back-end
    </description>

    <welcome-file-list>
        <welcome-file>index.html</welcome-file>
    </welcome-file-list>

    <!-- log in filter -->
    <filter>
        <filter-name>LogFilter</filter-name>
        <filter-class>action.FilterAction</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>LogFilter</filter-name>
        <url-pattern>/home</url-pattern>
    </filter-mapping>

    <!-- Signup action servlet -->
    <servlet>
        <servlet-name>SignupServlet</servlet-name>
        <servlet-class>action.SignupAction</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SignupServlet</servlet-name>
        <url-pattern>/home/signup</url-pattern>
    </servlet-mapping>

    <!-- Login action servlet -->
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>action.LoginAction</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/home/login</url-pattern>
    </servlet-mapping>

    <!-- user action servlet -->
    <servlet>
        <servlet-name>GetUserServlet</servlet-name>
        <servlet-class>action.GetUserAction</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>GetUserServlet</servlet-name>
        <url-pattern>/users/*</url-pattern>
    </servlet-mapping>

    <!-- contact action servlet -->
    <servlet>
        <servlet-name>ContactServlet</servlet-name>
        <servlet-class>action.ContactAction</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ContactServlet</servlet-name>
        <url-pattern>/contacts/*</url-pattern>
    </servlet-mapping>

    <!-- number action servlet -->
    <servlet>
        <servlet-name>NumberServlet</servlet-name>
        <servlet-class>action.NumberAction</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>NumberServlet</servlet-name>
        <url-pattern>/numbers/*</url-pattern>
    </servlet-mapping>

</web-app>